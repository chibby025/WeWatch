# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_NAME=wewatch_db
DB_PORT=5432

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your_random_jwt_secret_key_here

# ============================================
# LIVEKIT (Real-time Video/Audio)
# ============================================
LIVEKIT_URL=http://localhost:7880
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# ============================================
# PAYMENT GATEWAYS - TWO ACCOUNT SYSTEM
# ============================================
# WeWatch uses a dual-account system to separate:
# - Platform revenue (15% commission) 
# - Host payout reserves (85% held for host withdrawals)

# ACCOUNT 1: PLATFORM REVENUE (15% Commission)
# This is YOUR profit account - money you can spend
# Stripe Revenue Account (for international payments)
STRIPE_REVENUE_PUBLISHABLE_KEY=pk_test_your_stripe_revenue_publishable_key
STRIPE_REVENUE_SECRET_KEY=sk_test_your_stripe_revenue_secret_key
STRIPE_REVENUE_WEBHOOK_SECRET=whsec_your_stripe_revenue_webhook_secret

# Paystack Revenue Account (for Nigerian payments)
PAYSTACK_REVENUE_PUBLIC_KEY=pk_live_your_paystack_revenue_public_key
PAYSTACK_REVENUE_SECRET_KEY=sk_live_your_paystack_revenue_secret_key

# ACCOUNT 2: HOST PAYOUT RESERVE (85% for hosts)
# This holds money for host withdrawals - DON'T TOUCH!
# Stripe Reserve Account
STRIPE_RESERVE_PUBLISHABLE_KEY=pk_test_your_stripe_reserve_publishable_key
STRIPE_RESERVE_SECRET_KEY=sk_test_your_stripe_reserve_secret_key
STRIPE_RESERVE_WEBHOOK_SECRET=whsec_your_stripe_reserve_webhook_secret

# Paystack Reserve Account
PAYSTACK_RESERVE_PUBLIC_KEY=pk_live_your_paystack_reserve_public_key
PAYSTACK_RESERVE_SECRET_KEY=sk_live_your_paystack_reserve_secret_key

# ============================================
# OPTIONAL: MAIN COLLECTION ACCOUNT
# ============================================
# If you want one account to collect all payments initially,
# then auto-split to REVENUE and RESERVE accounts above.
# Otherwise, collect directly to REVENUE account.

STRIPE_MAIN_PUBLISHABLE_KEY=pk_test_your_stripe_main_publishable_key
STRIPE_MAIN_SECRET_KEY=sk_test_your_stripe_main_secret_key
STRIPE_MAIN_WEBHOOK_SECRET=whsec_your_stripe_main_webhook_secret

PAYSTACK_MAIN_PUBLIC_KEY=pk_test_your_paystack_main_public_key
PAYSTACK_MAIN_SECRET_KEY=sk_test_your_paystack_main_secret_key
